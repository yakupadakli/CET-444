@model  ICollection<CollaborativeLearning.Entities.Scenario>


@{
    if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <li><a tabindex="-1" href="@Url.Action("Scenario","Groups",new{id=item.Id})">@item.Name</a></li>
        }
    }
    else
    {
        <li> No Scenario</li>
    }

}
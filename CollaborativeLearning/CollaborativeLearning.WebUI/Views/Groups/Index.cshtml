@model CollaborativeLearning.Entities.Group
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_GroupLayout.cshtml";
    CollaborativeLearning.Entities.User user = CollaborativeLearning.WebUI.Controllers.HelperController.GetCurrentUser();
}
@section BreadCrump{
    <li>@Html.ActionLink("Home", "Index", "Groups")</li>
    @if (Model != null)
    {
        <li class="active">@Model.GroupName</li>
    }

}
@section Header{
    <div class="page-header" style="margin: -20px 0 20px;">
        <h5>@user.Semesters.Where(s=>s.isActive==true).OrderByDescending(q=>q.semesterName).FirstOrDefault().semesterName</h5>
        @if (ViewBag.Error == "True")
        {
            <h4 class="alert-danger">
                @ViewBag.Message
            </h4>
        }
        else
        {
            <h3>
                @Model.GroupName
            </h3>
        }



    </div>
}

@if (Model != null)
{
    <div class="panel panel-default">
        <div class="panel-heading">Group Titile</div>
        <div class="panel-body">

        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Group List</div>
                    <div class="panel-body">
                        @Html.Action("GetGroupListTable", new { SemesterID = user.Semesters.Where(s=>s.isActive==true).OrderByDescending(q=>q.semesterName).FirstOrDefault().Id })
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Scenario List</div>
                    <div class="panel-body">
                        @*@Html.Action("GetScenarioListTable")*@
                    </div>
                </div>
            </div>
        </div>
    </div>
}


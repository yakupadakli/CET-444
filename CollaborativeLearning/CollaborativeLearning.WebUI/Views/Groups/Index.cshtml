@model CollaborativeLearning.Entities.Group
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_GroupLayout.cshtml";
    CollaborativeLearning.Entities.User user = CollaborativeLearning.WebUI.Controllers.HelperController.GetCurrentUser();
    CollaborativeLearning.Entities.Semester userSemester = CollaborativeLearning.WebUI.Controllers.HelperController.GetUserActiveSemester(user.Id);
}
@section BreadCrump{
    @if (user.Groups.Count > 0)
    {
        <li>@Html.ActionLink("Home", "Index", "Groups", new { id = user.Groups.FirstOrDefault().Id })</li>

    }
    else
    {
        <li>@Html.ActionLink("Home", "Index", "Groups", new { id = 0})</li>

    }
    @if (Model != null)
    {
        <li class="active">@Model.GroupName</li>
    }

}
@section Header{


    @if (ViewBag.Error == "True")
    {
        <h4 class="alert-danger">
            @ViewBag.Message
        </h4>
    }
    else
    {
        <div class="col-lg-4 pull-left text-right" ><h3><span class="small">Group Name:</span></h3></div>
        <div class ="col-lg-8 pull-right">
            
            <h3>
             <span id="GroupNameLabel">@Model.GroupName</span>  
            </h3>
            <div id="GroupNameEditFormContainner">
                @using (Ajax.BeginForm("_ChangeGroupName","Groups",new{groupId=Model.Id},new AjaxOptions{
                    UpdateTargetId = "GroupNameLabel",
                    HttpMethod = "POST",
                    OnComplete = "GroupNameEditFormComplete",
                    OnSuccess="GroupNameEditFormComplete",
                    LoadingElementId="AjaxFormProccessIcon"
                    
                },new{@class="form"})) { 
                    @Html.HiddenFor(model => model.Id);
                    @Html.TextBoxFor(model => model.GroupName, new { @class = "form-group" });
                    <input type="submit" class="btn btn-primary form-group" />
                }
            </div>
        </div>

    }


}

@if (Model != null)
{
    <div class="panel panel-default">
        <div class="panel-heading">Group Titile</div>
        <div class="panel-body">

        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Group List</div>
                    <div class="panel-body">
                        @Html.Action("GetGroupListTable", "Groups", new { SemesterID = userSemester.Id })
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Scenario List</div>
                    <div class="panel-body">
                        @*@Html.Action("GetScenarioListTable")*@
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div id="AjaxFormProccessIcon">
    <img src="~/Content/Template/img/loader.gif" />
</div>
<style>
    div#AjaxFormProccessIcon {
        display: none;
        position: absolute;
        left: 42%;
        top: 76%;
        z-index: 1000;
        height: 64px;
        width: 64px;
    }
</style>
<script>

    $(document).ready(function () {
        $("#GroupNameEditFormContainner").hide();
        
        $("#GroupNameLabel").click(function () {
            $("#GroupNameLabel").hide();
            $("#GroupNameEditFormContainner").show();
        })
        
    });
    function GroupNameEditFormComplete() {

        $("#GroupNameLabel").show();
        $("#GroupNameEditFormContainner").hide();
    }
    function OnSuccess() {
        location.reload();
    }
</script>
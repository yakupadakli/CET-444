@model ICollection<CollaborativeLearning.Entities.Resource>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Type
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a tabindex="-1" href="@Url.Action("ShowStudent","Resource",new{id=item.Id})">@item.Name</a>

                </td>
                <td>
                    @item.type
                </td>
                <td>
                    <a tabindex="-1" href="" class="btn btn-info"><i class="glyphicon glyphicon-eye-open"> Show</i></a>
                    @if (item.type.Contains("File"))
                    {
                        <a tabindex="-1" href="" class="btn btn-primary"><i class="glyphicon glyphicon-download"> Download</i></a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

@model ICollection<CollaborativeLearning.Entities.User>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Groups
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FullName

                </td>
                <td>
                    @foreach (var gr in item.Groups)
                    {
                        @gr.GroupName <br />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

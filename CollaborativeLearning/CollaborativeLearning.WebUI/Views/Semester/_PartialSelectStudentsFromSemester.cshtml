@using (Ajax.BeginForm(
    "CopyStudentsFromSemester",
    "Semester",
    null,
    new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "Students",
        LoadingElementId = "loadingAddingSemesterS"
    }
))
{  
    @Html.Hidden("SemesterID", (int)ViewBag.ID)

    <div class="input-group">
        <select multiple="multiple" style="min-width:150px" id="SemesterMultiSelect" name="SemesterMultiSelect" class="form-control">
            @foreach (var item in ViewBag.AllSemesters as List<CollaborativeLearning.Entities.Semester>)
            {
                <option value="@item.Id">@item.CourseName</option>
            }
        </select>
        <span class="input-group-addon" style="padding:1px;">
            <input type="submit" value="Add" class="btn btn-primary btn-sm" />
        </span>
    </div>
}
<div id = "loading">
    <img src="~/Content/Template/img/loader.gif" />
</div>
<script>
    $(document).ready(function () {
        $("#SemesterMultiSelect").select2({
            placeholder: "Type a Course Name",
            allowClear: true
        });
    });
</script>

<style>
    div#loading {
        display:none;
        position: absolute;
        left: 42%;
        top: 76%;
        z-index: 1000;
        height: 64px;
        width: 64px;
    }
</style>

<div id = "loadingAddingSemesterS">
    <img src="~/Content/Template/img/loader.gif" />
</div>

<style>
    div#loadingAddingSemesterS {
        display:none;
        position: absolute;
        left: 42%;
        top: 76%;
        z-index: 1000;
        height: 64px;
        width: 64px;
    }
</style>
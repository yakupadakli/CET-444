@model CollaborativeLearning.Entities.Semester
@{

    List<SelectListItem> yearList = new List<SelectListItem>();
    int presentYear = DateTime.Now.Year;
    for (int i = 0; i < 5; i++)
    {
        yearList.Add(new SelectListItem { Text = (presentYear + i).ToString(), Value = (presentYear + i).ToString() });
    }
    List<SelectListItem> semesterList = new List<SelectListItem>();
    semesterList.Add(new SelectListItem { Text = "Güz", Value = "1" });
    semesterList.Add(new SelectListItem { Text = "Bahar", Value = "2" });
    semesterList.Add(new SelectListItem { Text = "Yaz", Value = "3" });
}
<!-- Modal for adding -->

<div class="modal fade" id="modal_semesterCreate">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Semester Add</h4>
            </div>
            @using (Ajax.BeginForm("Create", "Semester", new AjaxOptions
            {

                InsertionMode = InsertionMode.Replace,//target element(#pacientList) will be replace
                UpdateTargetId = "semesterList"

            }))
            {
                <div class="modal-body">

                    <section id="CreateSemesterForm">


                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <table>
                                <tr>
                                    <td width="100">
                                        @Html.LabelFor(m => m.year)
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(m => m.year, yearList)
                                    </td>

                                </tr>
                                <tr>
                                    <td colspan="2">
                                        @Html.ValidationMessageFor(m => m.year)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.LabelFor(m => m.semester)
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(m => m.semester, semesterList)
                                    </td>

                                </tr>
                                <tr>
                                    <td colspan="2">
                                        @Html.ValidationMessageFor(m => m.semester)
                                    </td>
                                </tr>
                               
                            </table>
                        </fieldset>


                    </section>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Add Semester</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script>
    $(document).ready(function ()
    {
        $("#CreateSemesterSuccess").hide();
        $("#CreateSemesterFailure").hide();
        
    });
    function CreateSemesterSuccess() {
        alert("success");
     }
    function CreateSemesterFailure() {
        alert("fail");
    }
</script>
@model ICollection<CollaborativeLearning.Entities.Semester>
@if (Model.Count != 0)
            {

                foreach (var item in Model)
                {

                   <tr class="success">
                        <td>
                            @item.semesterName
                            @Ajax.ActionLink("Remove", "DeleteUserFromGroup", "Group", new { userId = item.Id, groupId = ViewBag.groupId },
                                new AjaxOptions
                                {
                                    HttpMethod = "POST",
                                    Confirm = "Are you sure to delete this semester?",
                                    UpdateTargetId = "mentors",
                                    LoadingElementId = "loading",
                                },
                               null)
                        </td>
                    </tr>

                }

            }
            else
            {
                <tr>
                    <td colspan="4" width="100%">
                        Any user is not found!
                    </td>
                </tr>
            }
@using (Ajax.BeginForm("_SemesterToMentor", "Mentor", new { id = ViewBag.groupId }, new AjaxOptions
            {
                HttpMethod = "POST",
                UpdateTargetId = "groupTable",
                LoadingElementId = "loading",
            }))
            {
                <tr>
                    <td>
                        <select multiple="multiple" style="min-width:150px" id="SemesterMultiSelect-@ViewBag.ID" name="SemesterMultiSelect" class="form-control">
                            @{
                                if (ViewBag.AllSemesters != null)
                                {
                                    foreach (var semester in ViewBag.AllSemesters as List<CollaborativeLearning.Entities.Semester>)
                                    {
                                        <option value="@semester.Id">@semester.semesterName</option>
                                    }
                                }
                            }
                        </select>
                    </td>
                    <td>
                        <input type="submit" class="btn-xs btn-success" value="+" />
                                
                    </td>
                </tr>
            }

<script>
    $(document).ready(function () {
        $("#SemesterMultiSelect-@ViewBag.ID").select2({
            placeholder: "Type Semester",
            allowClear: true
        });
    });
</script>
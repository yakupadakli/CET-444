@model ICollection<CollaborativeLearning.Entities.Group>


@{
    if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <a href="@Url.Action("Index", "Groups", new { semesterID = item.SemesterID, groupID = item.Id })" class="list-group-item" style="padding-left: 30px;">
                <span class="glyphicon glyphicon-chevron-right"></span>
                @item.GroupName
            </a>
        }
    }
    else
    {
        <a href="" class="list-group-item" style="padding-left: 30px;">

                <span class="glyphicon glyphicon-warning-sign"></span>
                Any group is not assigned to you yet.
            </a>
    }

}

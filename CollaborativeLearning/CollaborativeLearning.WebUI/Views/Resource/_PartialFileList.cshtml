@model ICollection<CollaborativeLearning.Entities.ResourceFile>

<table class="table table-hover table-responsive table-striped">
    <thead>
        <tr>
            <td class="col-sm-1">
                <b>File Name</b>
            </td>
            <td>
                <b>Size</b>
            </td>
            <td>
                <b>FileType</b>
            </td>
            <td>
                <b>URL</b>
            </td>
            <td class="col-sm-2">
                <b>Action</b>
            </td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {

            foreach (var item in Model)
            {
                <tr>
                    <td class="col-sm-1">
                        @item.FileName
                    </td>
                    <td>
                        @item.FileSize
                    </td>
                    <td>
                        @item.FileType
                    </td>
                    <td>
                        @item.FileUrl
                    </td>
                    <td class="col-sm-2">
                        @Ajax.ActionLink(" ", "DeleteFile", "Resource", new { id = item.Id },
                                                                new AjaxOptions
                                                                {

                                                                    Confirm = "Are you sure to delete this File",
                                                                    UpdateTargetId = "ResourceTableContianner",
                                                                    LoadingElementId = "loadingResourceOps"
                                                                },
                                                                new { @class = "btn-sm btn-danger glyphicon glyphicon-trash", alt = "Delete File", title = "Delete File" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@model ICollection<CollaborativeLearning.Entities.Resource>
@{
    <table class="table-striped">
        <thead>
            <tr>
                <td width="15%">
                    ID
                </td>
                <td width="35%">
                    Name
                </td>
                <td width="35%">
                    Type
                </td>

                <td width="15%">
                    Action
                </td>
            </tr>
        </thead>
        <tbody class="table-striped">
            @if (Model.Count != 0)
            {

                foreach (var item in Model)
                {

                    <tr>
                        <td>
                            <a href="@Url.Action("Scenario","Semester",new {id=item.Id})">@item.Id</a>
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.type
                        </td>

                        <td>
                            <a>Remove</a>
                        </td>
                    </tr>

                }

            }
            else
            {
            <tr>
                <td colspan="4" width="100%">
                    Any resource is not found!
                </td>
            </tr>
            }
        </tbody>
    </table>
}
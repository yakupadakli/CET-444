@model CollaborativeLearning.Entities.ActionPlan

<div class="modal fade" id="modal_updateActionPlan-@Model.Id">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Action Plan Update</h4>
            </div>
            @using (Ajax.BeginForm("_PartialActionPlanUpdate", "ActionPlan", new AjaxOptions {HttpMethod="POST" }))
            {
                <div class="modal-body">

                    <section id="UpdateActionPlanForm">


                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <table>
                                
                                <tr>
                                    <td>
                                        @Html.LabelFor(m => m.Content)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.Content)
                                    </td>

                                </tr>
                                <tr>
                                    <td colspan="2">
                                        @Html.ValidationMessageFor(m => m.Content)
                                    </td>
                                </tr>
                                <tr>
                                    <td width="100">
                                        @Html.LabelFor(m => m.isActive)
                                    </td>
                                    <td>
                                        @Html.CheckBoxFor(m => m.isActive)
                                    </td>

                                </tr>
                                <tr>
                                    <td colspan="2">
                                        @Html.ValidationMessageFor(m => m.isActive)
                                    </td>
                                </tr>                             
                            </table>
                        </fieldset>


                    </section>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Update Action Plan</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script>
    $(document).ready(function () {
        $("#UpdateActionPlanSuccess").hide();
        $("#UpdateActionPlanFailure").hide();

    });
    function UpdateActionPlanSuccess() {
        alert("success");
    }
    function UpdateActionPlanFailure() {
        alert("fail");
    }
</script>
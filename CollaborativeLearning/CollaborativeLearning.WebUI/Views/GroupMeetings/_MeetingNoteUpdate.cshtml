@model CollaborativeLearning.Entities.MeetingNote


    <div class="modal-header">
        <h3 class="modal-title">Add Meeting Note</h3>
    </div>
    @using (Html.BeginForm("_MeetingNoteUpdate", "GroupMeetings", 
    null,FormMethod.Post,
    new { enctype = "multipart/form-data" }))
    {
        <div class="modal-body">

            <section id="UpdateMeetingNoteForm">


                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(m=>m.Id)
                @Html.HiddenFor(m=>m.GroupID)
                
                <div class="grid">
                    <div class="col-lg-12">
                        <div class="dropdown">
                            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="col-lg-12">
                        <div class="dropdown">
                            Meeting Photo
                            <div class="controls">
                                <input type="file" id="filePictureUpdate" name="filePictureUpdate" />
                                @{if(Model.MeetingNoteFiles.Where(f=>f.FileType == "image/jpeg").Count()>0)
                                  {
                                    string url = Model.MeetingNoteFiles.Where(m=>m.FileType == "image/jpeg").FirstOrDefault().FileUrl;
                                    <img src="~/GroupMeetingsFiles/@url" class="img-responsive" style="max-width: 20%;" alt="Responsive image"/>
                                  }
                                }
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="col-lg-12">
                        <div class="dropdown">
                            @Html.LabelFor(m => m.Description, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextAreaFor(m => m.Description, new { 
                                                @class = "form-control updateNote", 
                                                @id = "updateNote", 
                                                placeholder = "Enter Meeting Note" })
                                @Html.ValidationMessageFor(m => m.Description)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="dropdown">
                            Attachment
                            <div class="controls">
                                <input type="file" id="fileRarUpdate" name="fileRarUpdate" />
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
            </section>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Update Note</button>
            <button type="button" onclick="cancelEditMeeting(@Model.Id)" class="btn btn-danger">Cancel</button>
                    
        </div>
    }

<script type="text/javascript">
    $(function () {
        CKEDITOR.config.htmlEncodeOutput = true;
        CKEDITOR.config.autoParagraph = false;
        CKEDITOR.config.enterMode = CKEDITOR.ENTER_BR;
        CKEDITOR.replace("updateNote");
    });
</script>


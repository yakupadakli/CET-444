@using (Ajax.BeginForm(
    "AssignAsMentor",
    "Mentor",
    new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "mentors",
        LoadingElementId = "loadingAllStudents"
    }
))
{  
    <div class="input-group">
        <select multiple="multiple" style="min-width:150px" id="UserMultiSelect" name="UserMultiSelect" class="form-control">
            @foreach (var item in ViewBag.Students as List<CollaborativeLearning.Entities.User>)
            {
                <option value="@item.Id">@item.FullName</option>
            }
        </select>
        <span class="input-group-addon" style="padding:1px;">
            <input type="submit" value="Assign as Mentor" class="btn btn-primary btn-sm" />
        </span>
    </div>
}
<div id = "loading">
    <img src="~/Content/Template/img/loader.gif" />
</div>
<script>
    $(document).ready(function () {
        $("#UserMultiSelect").select2({
            placeholder: "Type a username",
            allowClear: true
        });
    });
</script>

<style>
    div#loading {
        display:none;
        position: absolute;
        left: 42%;
        top: 76%;
        z-index: 1000;
        height: 64px;
        width: 64px;
    }
</style>

<div id = "loadingAllStudents">
    <img src="~/Content/Template/img/loader.gif" />
</div>

<style>
    div#loadingAllStudents {
        display:none;
        position: absolute;
        left: 42%;
        top: 76%;
        z-index: 1000;
        height: 64px;
        width: 64px;
    }
</style>
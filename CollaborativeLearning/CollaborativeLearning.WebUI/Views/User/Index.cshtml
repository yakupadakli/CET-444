@model CollaborativeLearning.Entities.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="container" style="margin-top: 2%;">
    <div class="row" style="margin-left:10%;margin-right:10%; width:80%">
        <div class="col-lg-12 panel panel-default clearfix">
            <br />
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading text-left">
                        <h5 class="text-info">Profile</h5>
                    </div>
                    <div class="panel-body">
                        <div class="col-sm-4 pull-left">
                            <b>Name:</b>
                        </div>
                        <div class="col-sm-8">
                            @Model.FullName
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 pull-right">
                <div class="panel panel-default">
                    <div class="panel-heading text-center">
                        <h4 class="text-warning">Registered Course</h4>
                        
                    </div>
                    <div class="panel-body" id="UserCourseContainner">
                        @Html.Partial("_PartialUserCourse")
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="loadingIndicator">
    <img src="~/Content/Template/img/loader.gif" />
</div>
<style>
    div#loadingIndicator {
        display: none;
        position: absolute;
        left: 42%;
        top: 76%;
        z-index: 1000;
        height: 64px;
        width: 64px;
    }
</style>

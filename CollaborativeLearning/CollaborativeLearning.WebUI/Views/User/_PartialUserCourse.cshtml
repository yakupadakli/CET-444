@if (ViewBag.AddCourseSuccess != null)
{
    if (ViewBag.AddCourseSuccess == "true")
    {
        <div class="alert alert-dismissable alert-success">
            You have added the course successfully.
        </div>

    }
    else
    {
        <div class="alert alert-warning alert-dismissable">
            The course is not found.
        </div>
    }
}
<div id="UserAddCourseContainner">
    @Html.Action("_PartialAddCourse", "User")
</div>
<div id="CourseListContainner">
    @Html.Action("_PartialStudentsCourseList", "User", new { id = CollaborativeLearning.WebUI.Controllers.HelperController.GetCurrentUserId()})
</div>
@model IEnumerable<CollaborativeLearning.Entities.Task>
@{
    ViewBag.Title = "Tasks";
}
<div id="content">
@foreach (var item in Model)
{
    <div class="panel panel-primary">
      <div class="panel-heading">
          <div class="col-lg-4">
              <div>
                Task : @item.TaskName
              </div>
          </div>
              <div class="text-right">
                  <div class="panel-body">
                    <div class="btn-group ">
                        <a href='#' class='deneme btn btn-default btn-xs' data-toggle='modal' data-target='#modal_updateTask-@item.Id'>
                            <span class='glyphicon glyphicon-pencil'></span> Edit 
                        </a>
                        <a href='../../Task/Delete/@item.Id' onclick='return confirm_click();' class='btn btn-default btn-xs'>
                           <span class='glyphicon glyphicon-remove'></span> Delete </a>
                    </div>
                    <div id="UpdateTaskForm-@item.Id">
                        @Html.Action("_PartialTaskUpdate", "Task", new {id=item.Id,scenarioId = TempData["scenarioId"] })
                    </div> 
                  </div> 
              </div>
      </div>
      <div class="panel-body">
          Task : @item.Content
      </div>
    </div>       
    
}
</div>
<script type="text/javascript">
    function confirm_click()
    {
        return confirm("Are you sure to delete this task? Note: This task can be assigned more than one scenario.");
    }

    function success(result) {
        $("#_PartialTaskUpdate").html(result);
        alert("geldi");
        reloadDisplayAverage();
    }

</script>


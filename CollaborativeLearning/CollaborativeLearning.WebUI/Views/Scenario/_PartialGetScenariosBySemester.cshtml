@model ICollection<CollaborativeLearning.Entities.Scenario>


@{
    if (Model.Count != 0)
    {
    <div class="table-responsive">
        <table class="table-striped table table-hover">
            <thead>
                <tr>
                    <td width="30%">Scenario Name
                    </td>
                    <td width="30%">Description
                    </td>
                    <td width="15%">Group Count
                    </td>
                    <td width="15%">Action
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @*@Ajax.BeginForm("Show"){
                            
                            }*@
                            <a href="@Url.Action("Scenario", "Semester", new { id = item.Id })">@item.Name</a>
                        </td>
                        <td>
                            @item.ShortDescription
                        </td>
                        <td>
                            @item.Groups.Count()
                        </td>
                        <td>
                            <a href="@Url.Action("Remove", "Semester", new { id = item.Id })" class="btn btn-danger btn-sm">
                                <span class='glyphicon glyphicon-remove'></span>
                                Remove
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    }
    else
    {
        <text>This semester does not have scenario yet!</text>
    }
}
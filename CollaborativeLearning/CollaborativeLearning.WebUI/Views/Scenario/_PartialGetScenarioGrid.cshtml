
@model CollaborativeLearning.Entities.Scenario
@{
    ViewBag.Title = "Semester";
}
<h2>Scenario</h2>
<br />
<br />
<br />
    <table id="scenario" class="display clearfix">
        <thead>
            <tr>
                <th>Semester Name</th>
                <th>Student Count</th>
                <th>Mentor Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="clearfix"> 
        </tbody>
    </table>




<script>

    $(document).ready(function () {

        $('#scenario').dataTable({
            "bServerSide": true,
            "sAjaxSource": "Scenario/ScenarioAjaxHandler",
            "aoColumns": [
                    
                    {
                        "mData": "semesterName",
                        
                    },
                    { "mData": "StudentCount" },
                    { "mData": "MentorCount" },
                    {
                        "mData": "MentorCount",
                        "fnRender": function (oObj) {
                            return "<a href='#' id='"+ oObj.aData.Id +"' class='deneme btn btn-default btn-xs' " +
                                    "data-toggle='modal' data-target='#myModal'>" +
                                      "<span class='glyphicon glyphicon-pencil'></span> Edit" +
                                    "</a>" +
                                    "<a href='#' type='button' class='btn btn-default btn-xs'>" +
                                      "<span class='glyphicon glyphicon-remove'></span> Delete" +
                                    "</a>";
                        }
                    }
            ]
        });

        
    });
</script>

<script>
    $(document).ready(function () {
        setTimeout(function() {
        $(".deneme").click(function () {
            console.log("oldu");
            $.ajax({
                url: "/Scenario/Edit/" + $(this).attr('id')
            })
            .success(function (result) {
                $("#editPartial").html(result);
            });
        });
        }, 2000);
    });
      
</script>



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div id="editPartial"class="modal-body">
         
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        
      </div>
    </div>
  </div>
</div>
@model CollaborativeLearning.Entities.Scenario

@*<div class="modal fade" id="modal_scenarioCreate">
    <div class="modal-dialog" style="width:400px;">
        <div class="modal-content">*@
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>*@
                <h3 class="modal-title">Scenario Add</h3>
            </div>
            @using (Ajax.BeginForm("_PartialCreate", "Scenario", new AjaxOptions {
                HttpMethod="POST",
                UpdateTargetId = "scenarios",
                LoadingElementId = "ScenarioAddPartialAjaxLoading"
            }))
            {
                <div class="modal-body">

                    <section id="CreateScenarioForm">


                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="grid">
                            <div class="col-lg-12">
                                <div class="dropdown">
                                    @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                    <div class="controls">
                                        @Html.TextBoxFor(m => m.Name, new {@class="form-control" })
                                        @Html.ValidationMessageFor(m => m.Name)
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-lg-12">
                                <div class="dropdown">
                                    @Html.LabelFor(m => m.ShortDescription, new { @class = "control-label" })
                                    <div class="controls">
                                        @Html.TextBoxFor(m => m.ShortDescription, new {@class="form-control" })
                                        @Html.ValidationMessageFor(m => m.ShortDescription)
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-lg-12">
                                <div class="dropdown">
                                    @Html.LabelFor(m => m.isActive, new { @class = "control-label" })
                                    <div class="controls">
                                        @Html.CheckBoxFor(m => m.isActive)
                                        @Html.ValidationMessageFor(m => m.isActive)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Add Scenario</button>
                    @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
                    
                </div>
            }

<div id="ScenarioAddPartialAjaxLoading">
    <img src="~/Content/Template/img/loader.gif" />
</div>

<style>
    div#ScenarioAddPartialAjaxLoading {
        display: none;
        position: absolute;
        left: 42%;
        top: 76%;
        z-index: 1000;
        height: 64px;
        width: 64px;
    }
</style>


<script>
    $(document).ready(function ()
    {
        $("#CreateScenarioSuccess").hide();
        $("#CreateScenarioFailure").hide();
        
    });
    function CreateScenarioSuccess() {
        alert("success");
     }
    function CreateScenarioFailure() {
        alert("fail");
    }
</script>
    <style>
        #scenarioNav 
        {
            position:fixed;
            padding: 9px 0;
            top:60px;
            width:266px;
        }

        #scenarioNavAdmin 
        {
            position:fixed;
            padding: 9px 0;
            top:300px;
            width:266px;
            margin-bottom: 25px;
        }
        .main_title {
            margin-left: 0;
            margin-right: 0;
            background-color: #fff;
            border-width: 1px;
            border-color: #ddd;
            border-radius: 4px 4px 0 0;
            box-shadow: none;
            position: relative;
            background-color: #fafafa;
            box-shadow: inset 0 3px 6px rgba(0,0,0,.05);
            border-color: #e5e5e5 #eee #eee;
            border-style: solid;
            padding-left: 12px;
        }

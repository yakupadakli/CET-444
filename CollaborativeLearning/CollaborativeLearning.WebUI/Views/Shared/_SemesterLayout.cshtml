<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div style="float:initial">
                <h1 class="navbar-brand" style="padding:0px;">
                    <a href="@Url.Action("Index", "Home")" style="text-decoration:none;">
                        YOOL
                    </a>
                </h1>
            </div>
            @Html.Action("ProfileSegments","Account",null)
        </div><!-- /.container -->
    </nav>
    <div class="container" >

        <div class="row" style="min-height:480px;">

            <div class="col-md-3">

                <div class="list-group" style="">
                    <a href="@Url.Action("Index", "Home")" class="list-group-item">Home</a>
                    <br />
                    <div class="main_title"><h4>Courses Operations</h4></div>
                    <a id="groups" href="#Groups" class="list-group-item" data-toggle="tab">Groups</a>
                    <a id="scenarios" href="#Scenarios" class="list-group-item active" data-toggle="tab">Scenarios</a>
                    <a id="works" href="#Works" class="list-group-item" data-toggle="tab">Submitted Works</a>
                    <a id="feedbacks" href="#Feedbacks" class="list-group-item" data-toggle="tab">Feedbacks</a>
                    <a id="reflections" href="#Reflections" class="list-group-item" data-toggle="tab">Reflections</a>
                    <a id="mentors" href="#Mentors" class="list-group-item" data-toggle="tab">Mentors</a>
                    <a id="students" href="#Students" class="list-group-item" data-toggle="tab">Students</a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <div class="caption-full">
                        @RenderSection("featured", required: false)
                        <ol class="breadcrumb">
                            @RenderSection("BreadCrump", false)
                        </ol>
                        <br />
                        <h2>
                            @RenderSection("Header", false)
                        </h2>
                        <section id="main">
                            @RenderBody()
                        </section>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <hr>

            <footer style="margin: 30px 30px;">
                <div class="row">
                    <div class="col-lg-12">
                        <p>
                            <strong>
                                Copyright &copy;
                            </strong> 
                            Project Team : 
                            Yakup Adaklı, 
                            Ali Akkaya, 
                            Oğuzhan Kemal, 
                            Mustafa Ozan Şindi | 
                            Leader : Ekrem Kutbay | 
                            Advisor : Asist. Prof. Hamdi Erkunt
                        </p>
                    </div>
                </div>
            </footer>
        </div>
    </div>


    @RenderSection("scripts", required: false)
</body>
    <script>

        $("#groups").click(function () {
            $(".list-group a").each(function (index) {
                $(this).removeClass("active");
            });
            $("#groups").addClass("active");


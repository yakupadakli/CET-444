        .main_title {
            margin-left: 0;
            margin-right: 0;
            background-color: #fff;
            border-width: 1px;
            border-color: #ddd;
            border-radius: 4px 4px 0 0;
            box-shadow: none;
            position: relative;
            background-color: #fafafa;
            box-shadow: inset 0 3px 6px rgba(0,0,0,.05);
            border-color: #e5e5e5 #eee #eee;
            border-style: solid;
            padding-left: 12px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div style="float:initial">
                <h1 class="navbar-brand" style="padding:0px;">CET 314: Computer Networks & Commuication</h1>
            </div>
            @Html.Action("ProfileSegments", "Account", null)
        </div><!-- /.container -->
    </nav>
    <div class="container">

        <div class="row" style="min-height:480px;">
            <div class="col-md-3">

                <div id="groupScenariosNav" class="list-group" style="">
                    <div class="main_title"><h4>My Group</h4></div>
                    @{
                        CollaborativeLearning.Entities.User  user = CollaborativeLearning.WebUI.Controllers.HelperController.GetCurrentUser();
                        if (user.Groups.Count > 0)
                        {

                            <a id="group" href="#Groups" class="list-group-item" data-toggle="tab">Group Scenario(s)</a>
                            @Html.Action("_PartialGetGroupScenarios", "Groups")
                            <a id="meeting" href="#Groups" class="list-group-item" data-toggle="tab">Group Meetings</a>
                        }
                        else
                        {
                            <span>You don't have group yet!</span>
                    }
                    }
               </div>
                <div id="groupGeneralNav" class="list-group" style="">
                    <div class="main_title"><h4>Course</h4></div>
                    <span class="dropdown-submenu ">
                        <a id="othergroups" href="" class="list-group-item" data-toggle="tab">
                            Other Groups
                        </a>
                        <ul class="dropdown-menu" style="margin-top: -40px;margin-left: 265px;">
                            @Html.Action("_PartialGetOtherGroupsForMenu", "Groups")
                        </ul>
                    </span>
                    <span class="dropdown-submenu ">
                        <a id="allScenarios" href="" class="list-group-item" data-toggle="tab">
                            All Scenarios

                        </a>
                        <ul class="dropdown-menu" style="margin-top: -40px;margin-left: 265px;">
                            @Html.Action("_PartialGetScenariosForMenu", "Groups")

                        </ul>
                    </span>
                    <a id="works" href="#Groups" class="list-group-item" data-toggle="tab">Submitted Works</a>
                    <a id="reflections" href="#Groups" class="list-group-item" data-toggle="tab">Reflection</a>
                </div>

                @RenderSection("GroupShowNav", false)

            </div>
            <div class="col-md-9">
                <div class="panel panel-default">
                    <div class="panel-body" style="padding:5px;padding-left:15px">
                        @Html.Action("_PartialHeaderSemeterInfo", "Groups")
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <div class="caption-full">
                        <ol class="breadcrumb">
                            @RenderSection("BreadCrump", false)
                        </ol>
                        <br />

                        <div class="col-lg-12 clearfix">
                            <div class="page-header clearfix" style="margin: -20px 0 20px;">
                                @RenderSection("Header", false)
                            </div>
                        </div>
                        <section id="main">
                            @RenderBody()
                        </section>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <hr>

            <footer style="margin: 30px 30px;">
                <div class="row">
                    <div class="col-lg-12">
                        <p>
                            <strong>
                                Copyright &copy;
                            </strong>
                            Project Team :
                            Yakup Adaklı,
                            Ali Akkaya,
                            Oğuzhan Kemal,
                            Mustafa Ozan Şindi |
                            Leader : Ekrem Kutbay |
                            Advisor : Asist. Prof. Hamdi Erkunt
                        </p>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @RenderSection("featured", required: false)

    @RenderSection("scripts", required: false)
</body>

</html>

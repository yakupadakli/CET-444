@model CollaborativeLearning.Entities.Work

<div class="modal fade" id="modal_updateWork-@Model.Id">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Work Update</h4>
            </div>
            @using (Ajax.BeginForm("_PartialWorkUpdate", "Work", new AjaxOptions {HttpMethod="POST" }))
            {
                <div class="modal-body">

                    <section id="UpdateWorkForm">


                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <table>
                                <tr>
                                    <td width="100">
                                        @Html.LabelFor(m => m.Name)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.Name)
                                    </td>

                                </tr>
                                <tr>
                                    <td colspan="2">
                                        @Html.ValidationMessageFor(m => m.Name)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.LabelFor(m => m.Description)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.Description)
                                    </td>

                                </tr>
                                <tr>
                                    <td colspan="2">
                                        @Html.ValidationMessageFor(m => m.Description)
                                    </td>
                                </tr>
                                                               
                            </table>
                        </fieldset>


                    </section>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Update Work</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script>
    $(document).ready(function ()
    {
        $("#UpdateWorkSuccess").hide();
        $("#UpdateWorkFailure").hide();
        
    });
    function UpdateWorkSuccess() {
        alert("success");
     }
    function UpdateWorkFailure() {
        alert("fail");
    }
</script>
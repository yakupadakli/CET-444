@model CollaborativeLearning.Entities.Work
@using (Ajax.BeginForm("_PartialWorkCreate", "Work", new AjaxOptions { HttpMethod = "POST", OnSuccess="searchAdmin" }, new { scenarioId = ViewBag.scenarioId }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="panel panel-primary">
        <div class="panel-heading">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "exampleInputEmail1", placeholder = "Enter Work Name" }) @Html.ValidationMessageFor(m => m.Name)

        </div>
        <div class="panel-body">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Description" }) @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>   
                
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Add Work</button>
                    
                </div>
}
<script>
function searchAdmin() {
